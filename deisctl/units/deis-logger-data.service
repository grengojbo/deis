[Unit]
Description=deis-logger-data

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStartPre=/bin/sh -c "docker history grengojbo/mini:latest >/dev/null 2>&1 || docker pull grengojbo/mini:latest"
ExecStart=/bin/sh -c "docker inspect deis-logger-data >/dev/null 2>&1 || docker run --name deis-logger-data -v /var/log/deis grengojbo/mini:latest /bin/true"

[Install]
WantedBy=multi-user.target

[X-Fleet]
MachineMetadata=deis=yes
